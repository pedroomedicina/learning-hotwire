<%= form_with model: project do |form| %>
  <%= render "errors", object: form.object %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name, autofocus: true %>
  </div>

  <div>
    <%= form.submit %>
    <% if form.object.persisted? %>
      <%= button_tag "Destroy", form: :delete_project, class: "contrast" %>
    <% end %>
  </div>
<% end %>

<%= form_with model: project, method: :delete, id: :delete_project do %>
<% end %>